<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/layer1"
    tools:context=".Activity.ReplenishmentReverse">




    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:drawablePadding="3dp"
        android:drawableTint="@color/colorblue_dark"
        android:text="    Replacement"
        android:textColor="@color/colorblue_dark"
        android:textSize="35dp"
        android:textStyle="bold"
        android:visibility="gone" />



    <EditText
        android:id="@+id/itemKintTextRE"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text=""
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"

        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="2"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/from"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <Spinner
                android:id="@+id/RepRev_fromspinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1.5" />

            <Spinner
                android:id="@+id/RepRev_tospinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="1.5" />

            <TextView
                android:id="@+id/textview2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"

                android:gravity="center"
                android:padding="3dp"
                android:text="@string/to"
                android:textColor="@color/white"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/RepRev_storrespon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/RepRev_zoneedt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"

                android:background="@drawable/back_border_edit"
                android:elevation="2dp"
                android:gravity="center"
                android:inputType="text"
                android:padding="3dp"
                android:textColor="@color/dark_blue_3"
                android:textCursorDrawable="@color/red"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:elevation="2dp"
                android:gravity="center"
                android:inputType="text"
                android:padding="3dp"
                android:text="@string/ZoneCode"
                android:textColor="@color/dark_blue_3"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/scanZoneCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:elevation="2dp"
                android:gravity="center"
                android:inputType="text"
                android:onClick="ScanCode"
                android:padding="3dp"
                android:textColor="@color/dark_blue_3"
                android:textSize="14sp"
                app:drawableEndCompat="@drawable/ic_scan_black_24dp"
                app:drawableRightCompat="@drawable/ic_scan_black_24dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"

            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="3"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/itemCode"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/RepRev_itemcodeedt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_back"
                android:elevation="2dp"
                android:gravity="center"
                android:inputType="text"
                android:padding="3dp"
                android:textColor="@color/dark_blue_3"
                android:textCursorDrawable="@color/red"
                android:textSize="14sp" />



            <TextView
                android:id="@+id/RepRev_Itemrespons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />


            <TextView
                android:id="@+id/RepRev_exportstate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <TextView
                android:id="@+id/scanItemCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:elevation="2dp"
                android:gravity="center"
                android:inputType="text"
                android:onClick="ScanCode"
                android:padding="3dp"
                android:textColor="@color/dark_blue_3"
                android:textSize="14sp"
                android:visibility="gone"
                app:drawableEndCompat="@drawable/ic_scan_black_24dp"
                app:drawableRightCompat="@drawable/ic_scan_black_24dp" />


        </LinearLayout>


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_weight="2"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



<!--        <HorizontalScrollView-->
<!--            android:layout_width="match_parent"-->
<!--            android:fillViewport="true"-->
<!--            android:layout_weight="1"-->
<!--            android:layout_height="match_parent">-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_weight="1"
        android:orientation="vertical"
          android:layout_height="match_parent">



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="11"
            android:background="@drawable/back_border_dark"
            android:gravity="top"
            android:padding="3dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/from"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/to"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight=".7"

                android:gravity="center"
                android:text="@string/itemCode"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/recQty"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/itemqty"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </TableRow>


          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1.2">

              <androidx.core.widget.NestedScrollView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:fillViewport="true">

                  <androidx.recyclerview.widget.RecyclerView
                      android:id="@+id/RepRev_Recycl"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1" />
              </androidx.core.widget.NestedScrollView>
          </LinearLayout>
      </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:elevation="2dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_border_dark"
                android:padding="3dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="4dp"
                    android:text="@string/total_qty"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:id="@+id/AllZonestotalQty"

                    />



            </TableRow>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:visibility="gone"
            android:elevation="2dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@drawable/back_border_dark"
                android:padding="3dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/Zonescount"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:background="@drawable/edittext_back"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/Zonescount"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/ZonestotalQty"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_back"
                    android:gravity="center"
                    android:id="@+id/ZonestotalQty"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="15sp" />

            </TableRow>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="7"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0">


        <Button
            android:id="@+id/RepRev_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/cancel_button"
            android:elevation="15dp"
            android:gravity="center"
            android:padding="5dp"

            android:text="@string/back"
            android:textAllCaps="false"
            android:textColor="@color/red"
            android:textSize="18sp"

            />

        <Button
            android:id="@+id/RepRev_save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/done_button"
            android:gravity="center"

            android:text="@string/save"

            android:textAllCaps="false"
            android:textSize="18sp" />
        <Button
            android:id="@+id/RepRev_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/delete_button"
            android:elevation="15dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/deletebut"
            android:textAllCaps="false"
            android:textColor="@color/dark_blue_3"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>