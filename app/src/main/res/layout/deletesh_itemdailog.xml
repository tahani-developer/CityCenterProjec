<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:background="@color/layer1"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="6dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/DIsh_BACK"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:drawableEndCompat="@drawable/ic_baseline_clear_24" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/DIsh_poedit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight=".5"
            android:background="@drawable/back_border_edit"
            android:hint="@string/pono"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/dark_blue_3"
            android:textCursorDrawable="@color/red"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/DIsh_poSearch"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.9"
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:gravity="top"
            android:onClick="showZoneDialog">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/DIsh_boxedit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight=".5"
            android:background="@drawable/back_border_edit"
            android:hint="@string/boxnum"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/dark_blue_3"
            android:textCursorDrawable="@color/red"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/DIsh_boxSearch"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.9"
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:gravity="top"
            android:onClick="showZoneDialog">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/DIsh_itemcodeedit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight=".5"
            android:background="@drawable/back_border_edit"
            android:hint="@string/itemCode"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/dark_blue_3"
            android:textCursorDrawable="@color/red"
            android:textSize="14sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="120dp"
            android:textColor="@color/red"

            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="50dp"
            android:textColor="@color/red"
            android:text="@string/oldqty"
            android:layout_height="match_parent"/>


        <TextView
            android:id="@+id/DIsh_preQTY"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/back_border_edit"
            android:inputType="text"
            android:enabled="false"
            android:maxLines="1"
            android:padding="3dp"
            android:textColor="@color/red"
            android:textSize="14sp"

            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent"
        android:layout_weight="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="2dp">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/back_border_dark"
            android:gravity="bottom"
            android:padding="3dp">

            <TextView

                android:layout_width="60dp"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/pono"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView

                android:layout_width="150dp"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/boxnum"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView

                android:layout_width="150dp"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/itemCode"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView

                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/Qty"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </TableRow>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight=".97"
        android:orientation="horizontal"
        android:padding="2dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".9"
            android:background="@drawable/back_border_dark"
            android:gravity="bottom"
            android:padding="3dp">

            <TextView
                android:id="@+id/DIsh_poediteshow"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/darkblue_"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/DIsh_boxcountediteshow"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/darkblue_"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/DIsh_Itemcodeediteshow"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/darkblue_"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/DIsh_qtyedit"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/darkblue_"
                android:textSize="11sp" />

        </TableRow>

    </LinearLayout>
    </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center">

        <Button
            android:id="@+id/DS_delete"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/done_button"
            android:gravity="center"
            android:text="@string/delete1"
            android:textColor="@color/dark_blue_3" />

        <Button

            android:id="@+id/DS_dialogsave"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:background="@drawable/done_button"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="@color/dark_blue_3"
            android:textSize="12sp"
            android:layout_marginHorizontal="20dp"/>

        <Button
            android:id="@+id/DS_cancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/cancel_button"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/red" />



    </LinearLayout>
</LinearLayout>