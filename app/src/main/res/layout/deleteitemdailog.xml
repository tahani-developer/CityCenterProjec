<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="320dp"
    android:background="@color/layer1"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/close_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            app:drawableEndCompat="@drawable/ic_baseline_clear_24" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent" />


        <EditText
            android:id="@+id/DD_ZONEcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_border_edit"
            android:hint="@string/ZoneCode"
            android:inputType="text"
            android:maxLines="1"
            android:padding="3dp"
            android:textColor="@color/dark_blue_3"
            android:textCursorDrawable="@color/red"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/zoneSearch2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="top|start"
            android:onClick="showZoneDialog"
            app:drawableStartCompat="@drawable/ic_baseline_search_24">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent" />


        <EditText
            android:id="@+id/DD_itemcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_border_edit"
            android:hint="@string/itemCode"
            android:inputType="text"
            android:maxLines="1"
            android:padding="3dp"
            android:textColor="@color/dark_blue_3"
            android:textCursorDrawable="@color/red"
            android:textSize="14sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"

        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"

            android:textColor="@color/red" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="@string/oldqty"
            android:textColor="@color/red" />


        <TextView
            android:id="@+id/DD_preQTY"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/back_border_edit"
            android:enabled="false"
            android:inputType="text"
            android:maxLines="1"
            android:padding="3dp"
            android:textColor="@color/red"
            android:textSize="14sp"

            />

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"

        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back_border_dark"
            android:gravity="bottom"
            android:padding="3dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/itemCode"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/Qty"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/Zone"
                android:textColor="@color/white"
                android:textSize="15sp" />


        </TableRow>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back_border_dark"
            android:gravity="bottom"
            android:padding="3dp">

            <TextView
                android:id="@+id/DI_itemcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/darkblue_"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/DI_qty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/darkblue_"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/DI_zone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/darkblue_"
                android:textSize="15sp" />


        </TableRow>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button

            android:id="@+id/DD_dialogsave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1.2"
            android:background="@drawable/done_button"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="@color/dark_blue_3"
            android:textSize="12sp" />

        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent" />

        <Button

            android:id="@+id/DD_deleteitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1.2"
            android:background="@drawable/cancel_button"
            android:text="@string/deleteitemt2"
            android:textAllCaps="false"
            android:textColor="@color/red"
            android:textSize="12sp" />

        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/cancel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:background="@drawable/cancel_button"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/red"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal"></LinearLayout>
</LinearLayout>