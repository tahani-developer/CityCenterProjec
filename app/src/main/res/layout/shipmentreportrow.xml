<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fillViewport="true"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView_pono"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="2dp"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/colorblue1"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_boxno"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"

            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="2dp"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/colorblue1"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView_itemcode"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp"

            android:textStyle="bold" />
        <TextView
            android:layout_width="2dp"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/colorblue1"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_itemname"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="2dp"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/colorblue1"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_isnew"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="right|center"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="2dp"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/colorblue1"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView_qty"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />


    </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>