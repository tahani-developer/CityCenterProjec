<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layer1"
    android:orientation="vertical"
    tools:context=".Activity.StockTakeReport">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
android:layout_weight="3.5"

        android:layout_marginTop="2dp"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center|left"
            android:padding="4dp"
            android:layout_weight="1.2"
            android:text="@string/date"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/STR_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="date"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_weight="1"
            app:drawableStartCompat="@drawable/ic_date_range_black_24dp" />

        <EditText
            android:id="@+id/dat"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:inputType="date"
            android:textColor="@color/add_button"
            android:textSize="14sp"
            android:visibility="invisible" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="@string/Zone"
            android:layout_marginEnd="10dp"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center"/>


        <EditText
            android:id="@+id/ZONESpinner"
            android:layout_width="match_parent"
            android:padding="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_back"
            android:layout_weight="1" />

        <EditText

            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:inputType="date"
            android:textColor="@color/add_button"
            android:textSize="14sp"
            android:visibility="invisible" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_weight="1"
        android:orientation="horizontal">





        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:padding="1dp"
            android:layout_weight="1.3"
            android:gravity="center"
            android:text="@string/store2"
            android:textColor="@color/white"

            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/storeSpinner"
            android:theme="@style/Spinner"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <Button
            android:id="@+id/STR_preview"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/done_button"
            android:text="@string/preview"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/STR_search_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="6"
            android:background="@drawable/back_border_edit"
            android:drawableEnd="@drawable/ic_search_black_24dp"
            android:ems="10"
            android:hint="@string/search1"
            android:inputType="textPersonName"
            android:padding="2dp" />

        <TextView
            android:id="@+id/STR_Search"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="2"
            android:gravity="top" />
    </LinearLayout>
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_weight="1.3"
        android:orientation="vertical"
        android:fillViewport="true"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.3"
            android:layout_height="match_parent">




            <TableRow
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@color/colorblue_dark"
                android:gravity="center"
                android:padding="2dp">


                <TextView
                    android:id="@+id/textView_voucherNo"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/store2"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@color/colorblue1"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/textView_transName"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/ZoneCode"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@color/colorblue1"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/textView_date_voucher"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/itemCode"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@color/colorblue1"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_debit"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/Itemname"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@color/colorblue1"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/textView_balance"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/Qty"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </TableRow>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.8"
        android:orientation="vertical">

        <ListView
            android:id="@+id/STR_reportlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>

</LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.3"

        android:background="@color/colorblue_dark"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/total_qty"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/STR_total_qty_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="00.00"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>