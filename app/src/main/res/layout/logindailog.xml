<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/log_cancel2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:drawableEnd="@drawable/ic_baseline_clear_24"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="horizontal">
        <ImageView
            android:layout_height="30dp"
            android:layout_width="40dp"
            android:layout_marginStart="3dp"
            app:srcCompat="@drawable/ic_baseline_account_circle_24"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="4dp"

            android:text="@string/enter_login_info"
            android:textAlignment="textStart"
            android:textColor="@color/dark_blue_3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="62dp"
        android:layout_weight="6.5"
        android:background="@drawable/blue_border_rounded_cornwe">
        <!-- INPUT -->
        <EditText
            android:id="@+id/log_usernum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/userNum"
            android:inputType="number"
            android:maxLines="1"
            android:padding="1dp"
            android:textAlignment="viewStart">

        </EditText>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="62dp"
        android:layout_weight="6.5"
        android:background="@drawable/blue_border_rounded_cornwe">
        <!-- INPUT -->
        <EditText
            android:id="@+id/log_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/prompt_password"
            android:inputType="numberPassword"
            android:maxLines="1"
            android:padding="1dp"
            android:textAlignment="viewStart"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:layout_gravity="top|center"
        android:gravity="top|center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/log_authentic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="top|center"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/loginbtn"
            android:fontFamily="@font/poppins_medium"
            android:padding="2dp"
            android:textStyle="bold"
            android:text="@string/save"
            android:textColor="#ffffff"
            android:textSize="16sp" />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            />


    </LinearLayout>
</LinearLayout>