<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ShipmentsReport">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:text="@string/pono"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/PONUMBER"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="date"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight=".9"
            android:textColor="@color/add_button"

            android:textSize="12sp"
 />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:text="@string/boxnum"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/box"
            android:background="@drawable/edittext_back"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:layout_gravity="center"
            android:layout_weight=".8"
            android:gravity="center"
            android:textColor="@color/add_button"

            android:textSize="12sp"
            />
        <EditText

            android:layout_width="3dp"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:inputType="date"
            android:textColor="@color/add_button"
            android:textSize="14sp" />


        <Button
            android:id="@+id/PONO_preview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:visibility="gone"
            android:background="@drawable/done_button"
            android:text="@string/preview"
            android:textColor="@color/white" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight=".2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:text="@string/date"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/SH_date"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:inputType="date"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/add_button"
            android:textSize="12sp"
            app:drawableStartCompat="@drawable/ic_date_range_black_24dp" />
        <EditText
            android:id="@+id/dat"
            android:layout_width="30dp"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:inputType="date"
            android:textColor="@color/add_button"
            android:textSize="14sp" />


        <Button
            android:id="@+id/SH_preview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:background="@drawable/done_button"
            android:text="@string/preview"
            android:textColor="@color/white" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="6.9"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/search_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="6"
            android:background="@drawable/back_border_edit"
            android:ems="10"
            android:hint="@string/search1"
            android:inputType="textPersonName"
            android:padding="2dp"
            android:drawableEnd="@drawable/ic_search_black_24dp" />

        <TextView
            android:id="@+id/Search"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_weight="2"
             android:gravity="top" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6.5"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="@color/colorblue_dark"
            android:gravity="center"
            android:padding="2dp">


            <TextView
                android:id="@+id/textView_voucherNo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/pono"

                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/colorblue1"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textView_transName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/boxnum"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/colorblue1"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textView_date_voucher"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/itemCode"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/colorblue1"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_debit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/Itemname"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/colorblue1"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_cridit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/IsNew"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/colorblue1"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_balance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/Qty"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </TableRow>
    </LinearLayout>
        <!--    </LinearLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.6"
        android:orientation="vertical">

        <ListView
            android:id="@+id/SH_reportlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:background="@color/colorblue_dark"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/total_qty"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_qty_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="00.00"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>


    </LinearLayout>