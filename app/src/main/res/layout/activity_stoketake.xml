<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/layer1"
    android:scrollbars="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.Stoketake">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="5.6"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/Itemrespons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone" />

            <TextView
                android:id="@+id/ST_respon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />


            <Button
                android:id="@+id/ST_importbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_border_edit2"
                android:text="@string/Import"
                android:textColor="@color/dark_blue_3" />
            >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".99"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/store2"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/storespinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:padding="3dp"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".99"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:padding="3dp"
                    android:text="@string/ZoneCode"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ST_zoneedt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_back"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:padding="3dp"
                    android:textColor="@color/dark_blue_3"
                    android:textCursorDrawable="@color/red"
                    android:textSize="14sp" />


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:padding="3dp"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp"
                    android:visibility="invisible" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".99"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/itemCode"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ST_itemcodeedt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_back"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:padding="3dp"
                    android:textColor="@color/dark_blue_3"
                    android:textCursorDrawable="@color/red"
                    android:textSize="14sp" />


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:padding="3dp"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp"
                    android:visibility="invisible" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".99"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:padding="3dp"
                    android:text="@string/Itemname"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ST_itemname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_back"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:padding="3dp"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:padding="3dp"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/qtyrespon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:padding="3dp"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_margin="5dp"
                android:layout_weight=".99"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="2"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/recQty"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ST_qtyedt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_back"
                    android:elevation="2dp"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="3dp"
                    android:text="1"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:padding="3dp"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />

                <TextView

                    android:id="@+id/respons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:padding="3dp"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:drawableEndCompat="@drawable/ic_scan_black_24dp"
                    app:drawableRightCompat="@drawable/ic_scan_black_24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </TextView>

                <Button

                    android:id="@+id/ST_nextZone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_weight="3"
                    android:background="@drawable/back_border_edit"
                    android:text="@string/nextZone"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="12sp" />


            </LinearLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".98"
                android:background="@drawable/back_border_dark"
                android:gravity="top"
                android:padding="3dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/store2"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/Zone"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/itemCode"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/recQty"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/updateqty_chk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="15sp"
                    android:visibility="gone" />


            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".7">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/stocklist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

            </LinearLayout>


            <TextView
                android:id="@+id/respone3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/list"
            android:layout_weight="5.6"
            android:background="@color/dark_blue_3"
            android:orientation="horizontal"
            android:padding="3dp"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zoneqty"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_zoneqty_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0.0"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/scanedqty"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_scanedqty_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0.0"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/storeqty"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_storeqty_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0.0"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="5.5"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0">



            <Button
                android:id="@+id/ST_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/cancel_button"
                android:gravity="center"
                android:text="@string/back"
                android:textAllCaps="false"
                android:textColor="@color/red"
                android:textSize="18sp"

                />
            <Button
                android:id="@+id/ST_save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/done_button"
                android:gravity="center"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textSize="18sp" />
            <Button
                android:id="@+id/ST_deletebtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/delete_button"
                android:elevation="15dp"
                android:gravity="center"
                android:text="@string/deletebut"
                android:textAllCaps="false"
                android:textColor="@color/dark_blue_3"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>