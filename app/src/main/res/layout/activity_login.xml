<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/UserperRespons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!--        <ImageView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="273dp"-->
        <!--            android:background="@drawable/irbid"/>-->
        <LinearLayout
            android:id="@+id/nav_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/dark_blue_3"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    app:drawableEndCompat="@drawable/ic_baseline_settings_24" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/version"
                android:textColor="@color/layer6"
                android:textSize="16sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/nav_header_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"

                android:src="@drawable/irbid_city_center"
                app:civ_border_width="1dp" />
            <!--            android:src="@drawable/irbid"-->

            <!--            <TextView-->
            <!--                android:id="@+id/nav_header_textView"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:paddingTop="16dp"-->
            <!--                android:textColor="@color/yelow"-->
            <!--                android:text="@string/falcons_soft"-->
            <!--                android:fontFamily="serif"-->
            <!--                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/companyLin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/selectCompany"
                    android:textColor="@color/text_color" />

                <ImageView
                    android:id="@+id/companyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:onClick="showCompanyDialog"
                    app:srcCompat="@drawable/ic_keyboard_arrow_down2" />
                <!--                android:drawableStart="@drawable/ic_keyboard_arrow_down_black_24dp"-->

            </LinearLayout>

            <TextView
                android:id="@+id/selectedCompany"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="2.5"
                android:background="@drawable/back_without_border"

                android:gravity="center|bottom"
                android:textColor="@color/dark_blue_3" />


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="62dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="60dp"
            android:layout_weight="6.5"
            android:background="@drawable/blue_border_rounded_cornwe">
            <!-- INPUT -->
            <EditText
                android:id="@+id/username_input"
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/username_icon"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/userNum"
                android:inputType="number"
                android:maxLines="1"
                android:padding="3dp"
                android:textAlignment="viewStart"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="14sp" />
            <!-- ICON -->
            <ImageView
                android:id="@+id/username_icon"
                android:layout_width="14.7dp"
                android:layout_height="10.3dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="17dp"
                app:srcCompat="@drawable/ic_person_black_24dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="110dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="120dp"
            android:layout_weight="6.5">

            <TextView

                android:id="@+id/show_UN"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:maxLength="10"
                android:maxLines="1"

                android:padding="6dp"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="62dp"
            android:layout_marginTop="10dp"

            android:layout_marginEnd="60dp"
            android:layout_weight="6.5"
            android:background="@drawable/blue_border_rounded_cornwe">
            <!-- INPUT -->
            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/icon"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/prompt_password"
                android:inputType="numberPassword"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="3dp"
                android:textAlignment="viewStart"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="14sp" />
            <!-- ICON -->
            <ImageView
                android:id="@+id/icon"
                android:layout_width="14.7dp"
                android:layout_height="10.3dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="17dp"
                app:srcCompat="@drawable/ic_baseline_vpn_key_24" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center"
            android:layout_marginTop="10dp"
            android:layout_weight="6.3"
            android:gravity="top|center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/loginbtn"
                android:fontFamily="@font/poppins_medium"
                android:gravity="top|center"
                android:padding="2dp"
                android:text="@string/Login"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <!--    <ViewGroup-->
    <!--        android:id="@+id/parent_loop"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content" >-->
    <FrameLayout
        android:id="@+id/mainLinearAnim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/colorLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:visibility="visible">

            <View
                android:layout_width="350dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@color/yelow" />

            <View
                android:layout_width="350dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="#008000" />

            <View
                android:layout_width="350dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@color/colorblue1" />

            <View
                android:layout_width="350dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@color/red" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/colorLinear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <View
                android:layout_width="350dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@color/yelow" />

            <View
                android:layout_width="350dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="#008000" />

            <View
                android:layout_width="350dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@color/colorblue1" />

            <View
                android:layout_width="350dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@color/red" />
        </LinearLayout>
    </FrameLayout>
    <!--    </ViewGroup>-->
</LinearLayout>