<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layer1"
    tools:context=".Activity.NewShipment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layer1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/layer1"
            android:layout_weight="5"
            android:elevation="2dp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/poststate"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text=""
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".98"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:gravity="center"

                    android:padding="3dp"
                    android:text="@string/pono"
                    android:textColor="@color/white"
                    android:textSize="14sp"

                    />

                <EditText

                    android:id="@+id/poNotxt"
                    android:cursorVisible="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="2"
                    android:textAlignment="viewStart"
                    android:background="@drawable/edittext_back"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="3dp"
                    android:textColor="@color/dark_blue_3"
                    android:textCursorDrawable="@color/red"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/ponoSearch"
                    android:layout_width="60dp"

                    android:layout_height="20dp"
                    android:gravity="top"
                    app:srcCompat="@drawable/ic_baseline_search_24"
                    tools:layout_editor_absoluteX="300dp"
                    tools:layout_editor_absoluteY="70dp">

                </ImageView>

                <ImageView
                    android:id="@+id/ponoClose"
                    android:layout_width="60dp"

                    android:layout_height="20dp"
                    android:gravity="top"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_block_black_24dp"
                    tools:layout_editor_absoluteX="300dp"
                    tools:layout_editor_absoluteY="70dp">

                </ImageView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".98"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/boxnum"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/boxNotxt"
                    android:textAlignment="viewStart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_back"
                    android:cursorVisible="true"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="3dp"
                    android:textColor="@color/dark_blue_3"
                    android:textCursorDrawable="@color/red"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/boxnoSearch"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    app:srcCompat="@drawable/ic_baseline_search_24"
                    tools:layout_editor_absoluteX="300dp"
                    tools:layout_editor_absoluteY="70dp">

                </ImageView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:textAlignment="viewStart"
                    android:text="@string/barcode"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/barCodetxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_back"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="3dp"
                    android:cursorVisible="true"
                    android:textColor="@color/dark_blue_3"
                    android:textCursorDrawable="@color/red"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/barcodescan"

                    android:layout_width="60dp"
                    android:layout_height="20dp"

                    android:elevation="2dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:onClick="ScanCode"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp"
                    app:drawableEndCompat="@drawable/ic_scan_black_24dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/recQty"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/RecQtytxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_back"
                    android:textAlignment="viewStart"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="3dp"

                    android:text="1"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />


                <TextView


                    android:id="@+id/respon"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:gravity="top"
                    android:visibility="invisible"
                    tools:layout_editor_absoluteX="300dp"
                    tools:layout_editor_absoluteY="70dp">

                </TextView>

                <TextView


                    android:id="@+id/boxnorespon"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="top"
                    android:visibility="invisible"
                    tools:layout_editor_absoluteX="300dp"
                    tools:layout_editor_absoluteY="70dp">

                </TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/Poqty"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/PoQtytxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/edittext_back"
                    android:enabled="false"
                    android:textAlignment="viewStart"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="3dp"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/Itemname"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


                <EditText
                    android:id="@+id/Itemnametxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_back"
                    android:enabled="false"

                    android:textAlignment="viewStart"
                    android:inputType="text"
                    android:isScrollContainer="true"
                    android:maxLines="1"
                    android:padding="3dp"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="10sp" />
                <!--                    </LinearLayout>-->
                <!--                </HorizontalScrollView>-->


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button

                    android:id="@+id/nextbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight=".5"
                    android:background="@drawable/back_border_edit"
                    android:text="@string/nextBox"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/HorizontalScroll"
            android:fillViewport="true"
            android:padding="3dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_border_dark"
                    android:gravity="bottom"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/PONO_respon"
                        android:visibility="gone"/>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/pono"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView

                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/boxnum"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView

                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/barcode"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"

                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/recQty"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/Differ"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/remove"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight=".4"

                        android:gravity="end" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="match_parent">

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/shipRec"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>


            </LinearLayout>

        </HorizontalScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="7"
            android:gravity="center"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:fillViewport="true"
                android:padding="5dp"
                android:scrollbars="horizontal">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="@string/pono"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/currentpo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/back_border_edit"
                        android:enabled="false"
                        android:textAlignment="viewStart"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="3dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_weight="1"

                        android:elevation="2dp"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="@string/boxsnumber"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/currentbox"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/back_border_edit"
                        android:enabled="false"
                        android:textAlignment="viewStart"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="3dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="@string/Items"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/itemcount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/back_border_edit"
                        android:enabled="false"
                        android:textAlignment="viewStart"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="3dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </TableRow>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/lastBox"
                    android:textColor="@color/dark_blue_3">

                </TextView>
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:fillViewport="true"
                android:padding="5dp"
                android:scrollbars="horizontal">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal"

                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:elevation="1dp"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="@string/boxnum"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/LASTbox"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/back_border_edit"
                        android:enabled="false"
                        android:textAlignment="viewStart"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="3dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="@string/pono"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/LASTpo"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/back_border_edit"
                        android:enabled="false"
                        android:textAlignment="viewStart"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="1dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="@string/Items"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/itemcount2"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/back_border_edit"
                        android:enabled="false"
                        android:textAlignment="viewStart"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="1dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </TableRow>
            </HorizontalScrollView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8.59"

            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:elevation="2dp"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="14sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/cancel"

                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"

                android:layout_marginBottom="3dp"
                android:background="@drawable/cancel_button"
                android:elevation="5dp"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/back"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:textStyle="bold"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:elevation="2dp"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="14sp"
                android:visibility="invisible" />

            />

            <Button
                android:id="@+id/save"

                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"

                android:layout_marginBottom="3dp"
                android:background="@drawable/done_button"
                android:elevation="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/finish"
                android:textColor="@color/dark_blue_3"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:elevation="2dp"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="14sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/Ship_delete"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:background="@drawable/delete_button"
                android:elevation="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/deletebut"
                android:textColor="@color/dark_blue_3"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:elevation="2dp"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="14sp"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>