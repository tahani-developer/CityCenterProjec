<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NewShipment"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layer7"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"

            android:layout_marginRight="5dp"
            android:layout_weight="5"
            android:elevation="2dp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/poststate"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:text="" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".98"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:gravity="center"

                    android:padding="3dp"
                    android:text="@string/pono"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp"

                    />

                <EditText
                    android:id="@+id/poNotxt"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/back_border_edit"
                    android:inputType="text"
                    android:maxLines="1"

                    android:padding="3dp"
                    android:gravity="center"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/ponoSearch"
                    android:layout_width="60dp"

                    android:layout_height="20dp"
                    android:gravity="top"
                    app:srcCompat="@drawable/ic_baseline_search_24"
                    tools:layout_editor_absoluteX="300dp"
                    tools:layout_editor_absoluteY="70dp">

                </ImageView>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".98"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:gravity="center"

                    android:padding="3dp"
                    android:text="@string/boxnum"
                    android:textColor="@color/dark_blue_3"

                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/boxNotxt"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/back_border_edit"
                    android:inputType="text"
                    android:maxLines="1"

                    android:padding="3dp"
                    android:gravity="center"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/boxnoSearch"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    app:srcCompat="@drawable/ic_baseline_search_24"
                    tools:layout_editor_absoluteX="300dp"
                    tools:layout_editor_absoluteY="70dp">

                </ImageView>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:gravity="center"

                    android:text="@string/barcode"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/barCodetxt"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/back_border_edit"
                    android:inputType="text"
                    android:maxLines="1"

                    android:padding="3dp"
                    android:gravity="center"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/barcodescan"

                    android:layout_width="60dp"
                    android:layout_height="20dp"

                    android:elevation="2dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:onClick="ScanCode"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp"
                    app:drawableEndCompat="@drawable/ic_scan_black_24dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:gravity="center"

                    android:padding="3dp"
                    android:text="@string/recQty"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/RecQtytxt"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/back_border_edit"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text="1"
                    android:padding="3dp"
                    android:gravity="center"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />



                <TextView


                    android:id="@+id/respon"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:gravity="top"
                    android:visibility="invisible"
                    tools:layout_editor_absoluteX="300dp"
                    tools:layout_editor_absoluteY="70dp">

                </TextView>

                <TextView


                    android:id="@+id/boxnorespon"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="top"
                    android:visibility="invisible"
                    tools:layout_editor_absoluteX="300dp"
                    tools:layout_editor_absoluteY="70dp">

                </TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:gravity="center"

                    android:padding="3dp"
                    android:text="@string/Poqty"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="12sp"  />
                <EditText
                    android:id="@+id/PoQtytxt"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/back_border_edit"
                    android:inputType="text"
                    android:maxLines="1"
                    android:enabled="false"
                    android:padding="3dp"
                    android:gravity="center"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />
                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:gravity="center"

                    android:text="@string/Itemname"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="12sp" />
                <EditText
                    android:id="@+id/Itemnametxt"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/back_border_edit"
                    android:inputType="text"
                    android:maxLines="1"
                    android:enabled="false"
                    android:padding="3dp"
                    android:gravity="center"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button

                    android:id="@+id/nextbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight=".5"
                    android:background="@drawable/back_border_edit"
                    android:text="@string/nextBox"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/total_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:elevation="2dp"
            android:gravity="center"
            android:orientation="vertical">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_border_dark"
                android:gravity="bottom"
                android:padding="3dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/pono"
                    android:textColor="@color/white"

                    android:textSize="15sp" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/boxnum"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/barcode"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/recQty"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/Differ"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/remove"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight=".4"

                    android:gravity="right" />

            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/shipRec"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="7"
            android:gravity="center">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/border"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="1dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="@string/pono"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp"
                    />
                <EditText
                    android:id="@+id/currentpo"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/back_border_edit"
                    android:inputType="text"
                    android:maxLines="1"
                    android:enabled="false"
                    android:padding="3dp"
                    android:gravity="center"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="@string/boxsnumber"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/currentbox"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/back_border_edit"
                    android:inputType="text"
                    android:maxLines="1"
                    android:enabled="false"
                    android:padding="3dp"
                    android:gravity="center"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="@string/Items"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/itemcount"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/back_border_edit"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="3dp"
                    android:enabled="false"
                    android:gravity="center"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:visibility="invisible"
                    android:textSize="14sp" />
            </TableRow>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:textColor="@color/dark_blue_3"
                    android:gravity="center"
                    android:text="@string/lastBox"
                    >

                </TextView>
            </LinearLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/border"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="@string/boxnum"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/LASTbox"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/back_border_edit"
                    android:inputType="text"
                    android:maxLines="1"
                    android:enabled="false"
                    android:padding="3dp"
                    android:gravity="center"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="1dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="@string/pono"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp"
                    />
                <EditText
                    android:id="@+id/LASTpo"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/back_border_edit"
                    android:inputType="text"
                    android:maxLines="1"
                    android:enabled="false"
                    android:padding="1dp"
                    android:gravity="center"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/Items"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/itemcount2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/back_border_edit"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="1dp"
                    android:enabled="false"
                    android:gravity="center"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:visibility="invisible"
                    android:textSize="14sp" />
            </TableRow>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="3dp"
              android:visibility="invisible"
                    android:textSize="14sp" />
            <Button
                android:id="@+id/cancel"

                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"

                android:layout_marginBottom="3dp"
                android:background="@drawable/cancel_button"
                android:elevation="5dp"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/cancel"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:textStyle="bold"

                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:visibility="invisible"
                    android:textSize="14sp" />

            <Button
                android:id="@+id/save"

                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"

                android:layout_marginBottom="3dp"
                android:background="@drawable/done_button"
                android:elevation="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/finish"
                android:textColor="@color/dark_blue_3"
                android:textSize="16sp"
                android:textStyle="bold"
                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:visibility="invisible"
                    android:textSize="14sp" />
        </LinearLayout>
        </LinearLayout>
        </LinearLayout>
</RelativeLayout>