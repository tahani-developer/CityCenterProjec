<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/layer1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Db_BACK"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:drawableEndCompat="@drawable/ic_baseline_clear_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/Dbsh_poedit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight=".5"
            android:background="@drawable/back_border_edit"
            android:hint="@string/pono"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/dark_blue_3"
            android:textCursorDrawable="@color/red"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Dbsh_poSearch"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.9"
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:gravity="top"
            android:onClick="showZoneDialog">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/Db_boxedit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight=".5"
            android:background="@drawable/back_border_edit"
            android:hint="@string/boxnum"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/dark_blue_3"
            android:textCursorDrawable="@color/red"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Db_boxSearch"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.9"
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:gravity="top"
            android:onClick="showZoneDialog">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight=".98"
        android:orientation="horizontal"
        android:padding="2dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/back_border_dark"
            android:gravity="bottom"
            android:padding="3dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/boxnum"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/Items"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </TableRow>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="2dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/back_border_dark"
            android:gravity="bottom"
            android:padding="3dp">

            <TextView
                android:id="@+id/Db_boxnumshow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/darkblue_"
                android:textSize="12sp" />

            <TextView
                android:layout_width="4dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/Db_Itemcountediteshow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/darkblue_"
                android:textSize="11sp" />

        </TableRow>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"

        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Db_delete"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:layout_weight="1"
            android:background="@drawable/done_button"
            android:gravity="center"
            android:text="@string/delete1"
            android:textColor="@color/dark_blue_3" />

        <Button

            android:id="@+id/Db_dialogsave"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:background="@drawable/done_button"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="@color/dark_blue_3"
            android:textSize="12sp" />

        <Button
            android:id="@+id/Db_cancel"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/cancel_button"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/red" />


    </LinearLayout>
</LinearLayout>