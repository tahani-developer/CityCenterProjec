<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ZoneReplacment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">


            <!--            <ScrollView-->
            <!--                android:layout_width="fill_parent"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:layout_weight="5"-->
            <!--                android:fillViewport="true">-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ZR_itemkind"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"

                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:inputType="text"
                        android:padding="3dp"
                        android:text="@string/frmoZone"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/fromzoneedt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/back_border_edit"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:inputType="text"
                        android:padding="3dp"
                        android:textColor="@color/dark_blue_3"
                        android:textCursorDrawable="@color/red"
                        android:textSize="14sp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="@string/ZoneName"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/fromzoneName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/back_without_border"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:padding="3dp"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:inputType="text"
                        android:padding="3dp"
                        android:text="@string/ToZone"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/tozoneedt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/back_border_edit"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:inputType="text"
                        android:padding="3dp"
                        android:textColor="@color/dark_blue_3"
                        android:textCursorDrawable="@color/red"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="@string/ZoneName"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tozoneName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/back_without_border"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:padding="3dp"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="@string/itemCode"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/ZR_itemcodeedt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/back_border_edit"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:inputType="text"
                        android:padding="3dp"
                        android:textColor="@color/dark_blue_3"
                        android:textCursorDrawable="@color/red"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="@string/Qty"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ZR_respon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/ST_qtyedt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/back_border_edit"
                        android:elevation="2dp"
                        android:enabled="false"
                        android:gravity="center"
                        android:inputType="number"
                        android:padding="3dp"
                        android:text="1"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5">

                    </TextView>

                    <TextView
                        android:id="@+id/ZonRepdatarespon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"></TextView>

                    <Button

                        android:id="@+id/ZR_nextZone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_weight="3"
                        android:background="@drawable/back_border_edit"
                        android:text="@string/nextFromZone"
                        android:textAllCaps="false"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="12sp" />

                    <TextView

                        android:layout_width="40dp"
                        android:layout_height="match_parent"></TextView>

                    <Button

                        android:id="@+id/ZR_nextToZone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_weight="3"
                        android:background="@drawable/back_border_edit"
                        android:text="@string/nexttoZone"
                        android:textAllCaps="false"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5" />

                </LinearLayout>
                <!--        <LinearLayout-->
                <!--            android:layout_width="match_parent"-->
                <!--            android:layout_height="match_parent"-->


                <!--            android:layout_weight="1"-->
                <!--            android:orientation="horizontal">-->
                <!--            <TextView-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="match_parent"-->
                <!--                android:layout_weight="1">-->

                <!--            </TextView>-->
                <!--            <TextView-->
                <!--                android:id="@+id/ZonRepdatarespon0"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="match_parent"-->
                <!--                android:visibility="gone">-->
                <!--            </TextView>-->
                <!--            <Button-->

                <!--                android:id="@+id/ZR_nextZonem"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="match_parent"-->
                <!--                android:layout_gravity="end"-->
                <!--                android:layout_weight="5"-->
                <!--                android:background="@drawable/back_border_edit"-->
                <!--                android:text="@string/nextZone"-->
                <!--                android:textAllCaps="false"-->
                <!--                android:textColor="@color/dark_blue_3"-->
                <!--                android:textSize="12sp" />-->


                <!--        </LinearLayout>-->
            </LinearLayout>
            <!--            </ScrollView>-->


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@drawable/back_border_dark"
                android:gravity="top"
                android:padding="3dp">


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/frmoZone"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/ToZone"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/itemCode"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/Qty"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/aviqty"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/zonelist"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5">

                    </androidx.recyclerview.widget.RecyclerView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintVertical_bias="1.0">

                        <Button
                            android:id="@+id/ZR_save"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/done_button"
                            android:gravity="center"
                            android:text="@string/save"
                            android:textAllCaps="false"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/ZR_back"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/cancel_button"
                            android:gravity="center"
                            android:text="@string/back"
                            android:textAllCaps="false"
                            android:textColor="@color/red"
                            android:textSize="18sp"

                            />

                        <Button
                            android:id="@+id/ZR_delete"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/delete_button"
                            android:elevation="15dp"
                            android:gravity="center"
                            android:text="@string/deletebut"
                            android:textAllCaps="false"
                            android:textColor="@color/dark_blue_3"
                            android:textSize="18sp" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
